{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 500,
  "height": 300,
  "description": "Electoral college probability.",
  "background": null,
  "data": {"url": "https://raw.githubusercontent.com/lobakk/FIT3179/main/Datasets/electoral_college_probability_over_time.csv"},
  "transform": [{"calculate": "100*datum.win_prob","as":"whole_prob"}],
  "layer":[{
  "mark": "line",
  "encoding": {
    "x": {"field": "date", "timeUnit": "monthdate","title":"2020"},
    "y": {"field": "whole_prob", "type": "quantitative","title":"probability(%)"},
    "color": {"field": "party", "type": "nominal","scale": {"domain": ["republican", "democratic"], "range": ["#bc373b", "#2c79b5"]}},
    "tooltip":[{"field":"whole_prob","title":"Probability of winning(%)"},
                {"field":"date","type":"temporal"}]
  }
  },{
      "data": {
         "values": [{}]
      },
      "encoding": {
        "y": {"datum": 50}
      },
      "layer": [{
        "mark": "rule"
      }, {
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "bottom",
          "dx": -2,
          "dy": -2,
          "x": "width",
          "text": "50%",
          "fontSize": 13,
          "fontWeight":"bold",
          "font":"sans-serif"
        }
      }]
    }
  ]
}
